<div class="app-bar">
  <%= link_to  '<i class="material-icons">home</i>'.html_safe, root_path, class:'app-bar-element' %>
  <span class="app-bar-divider"></span>
  <%if current_user%>
    <div class="app-bar-element place-right">
        <ul class="app-bar-menu">
          <li><span><%= current_user.name %></span></li>
          <li><%= link_to 'Log Out', log_out_path, method: :delete %></li>
        </ul>
    </div>
  <%else%>
    <div class="app-bar-element place-right">
      <a class="dropdown-toggle fg-white"> Log In</a>
      <div class="app-bar-drop-container bg-white fg-dark place-right" data-role="dropdown" data-no-close="true">
        <div class="padding20">
          <%= render 'shared/nav-login'%>
        </div>
      </div>
    </div>
    <div class="app-bar-element place-right">
        <ul class="app-bar-menu">
          <li><%= link_to 'Sign Up', sign_up_path %></li>
        </ul>
    </div>
  <%end%>
  

</div>