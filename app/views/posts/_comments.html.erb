<table>
    <tr>
      <th>Commenter</th>
      <th>Body</th>
      <th>Delete</th>
    </tr>
  
  <% @comments.each do |comment| %>
    <tr>
      <td><%= comment.user %></td>
      <td><%= comment.body %></td>
      <td><%= link_to 'Borrar', [comment.post, comment], :confirm => 'Seguro?', :method => :delete %></td>      
      
    </tr>
  <% end %>
  </table>