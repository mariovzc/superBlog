<div class="container">
  <div class="row">
    <div class="col-lg-6 col-md-10 mx-auto">
      <div class="form-group">
        <%= f.label :title, 'Titulo' %>
        <%= f.text_field :title, class: 'form-control'%>
      </div>
      <div class="form-group">
        <%= f.label :body, 'Cuerpo' %>
        <%= f.text_area :body, class: 'form-control', rows: 25  %>
      </div>
      <div class="text-center">
        <%= f.submit action, class: 'btn  btn-primary' %>          
        <%= link_to  "Cancelar", :back, class: 'btn btn-secondary'%>
      </div>
    </div>
  </div>
</div>