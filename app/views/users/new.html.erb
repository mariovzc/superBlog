<header class="masthead" style="background-image: url('/assets/home-bg.jpg')">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">
          <h1>Registro de usuario</h1>
        </div>
      </div>
    </div>
  </div>
</header>
<div class="register-form container">
  <%= form_for @user do |f| %>
    <div class="row">
      <div class="col-md-12">
        <%= render 'shared/errors', object: f.object%>          
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6 col-md-10 mx-auto">
        <div class="form-group" >
          <%= f.label :first_name, 'Primer Nombre' %>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
      </div>
      <div class="col-lg-6 col-md-10 mx-auto">
        <div class="form-group" >
          <%= f.label :last_name , 'Apellido'%>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>        
      </div>
      <div class="col-lg-6 col-md-10 mx-auto">
        <div class="form-group" >
          <%= f.label :username,'Usuario'%>
          <%= f.text_field :username, class: 'form-control' %>
        </div>
      </div>
      <div class="col-lg-6 col-md-10 mx-auto">
        <div class="form-group" >
          <%= f.label :email, 'Correo'%>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
      </div>
      <div class="col-lg-6 col-md-10 mx-auto">
        <div class="form-group" >
          <%= f.label :password, 'Contraseña' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        </div>
        <div class="col-lg-6 col-md-10 mx-auto">
          <div class="form-group" >
            <%= f.label :password_confirmation, 'Confirmar contraseña' %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
        </div>
      </div>
      <div class="text-center">
        <%= f.submit 'Registrarse', class: 'btn btn-primary' %>
        <%= link_to  "Cancelar", root_path, class: 'btn btn-secondary' %>
      </div>    
    </div>
  <% end %>
</div>